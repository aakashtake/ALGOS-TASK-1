#include<iostream>
#include<string>
using namespace std;


int main()
{
    int degree= 0;
    string mystring;
    int n;
    int half;
    int a=0;
    cout<< "Enter the length of your string.\t";
    cin>> n;
    cout<< "Enter your string. \t";
    cin>> mystring;
    half=n/2;
    if (n==1)
        {
            cout<< "0";
        }
    else
    {   int count=0;
        while (count<n/2)
        {
            for(int i=0; i< half; i++)
            {
                if(mystring[i]==mystring[half + i])
                {
                    a= a+ 1;
                }
                else
                {
                    break;
                }
            }
                if(a=half)
                {
                    degree= degree + 1;
                } 
            half=half/2 ;
            count++;
          
        }
    
        cout<< degree;
    }
}
