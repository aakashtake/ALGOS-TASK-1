#include <iostream>
using namespace std;

int main()
{
    int oddnum;
    cout<< "Enter no. of columns";
    cin>> oddnum;
    int i, j, m, n;
    //Code to print required patern.
    for (n = 0; n < oddnum; n++)
    {
        cout<< "Enter no. of row.";
        cin>> m;
        for (i = 1; i <= m; i++) 
        {
            for (j = 1; j <= m; j++) 
            {
                if (i <= m / 2 + 1) 
                {
                    if (((j <= m / 2 + 2 - i) ) || ( (j > m / 2 + i - 1))) 
                        {
                            cout<< "*";
                        }    
                    else
                        {
                            cout<< " ";
                        }
                }                    


                else 
                {
                    if ((j <= i - m / 2) || (  j > (3 * m) / 2 - i)) 
                        {
                            cout<< "*";
                        }
                    else
                        {
                            cout<< " ";
                        }
                }
            }
            
            cout<< "\n";

        }
        break;
    }
}
