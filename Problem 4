#include <iostream>
using namespace std;

int main()
{
    int t;
    cout<< "Enter a odd no.";
    cin>> t;
    int i, j, n, m;
    
    //Code to print required patern.
    for (m = 0; m < t; m++)
    {

        n=t;
        for (i = 1; i <= n; i++) 
        {
            for (j = 1; j <= n; j++) 
            {
                if (i <= n / 2 + 1) 
                {
                    if (((j <= n / 2 + 2 - i) ) || ( (j > n / 2 + i - 1))) 
                        {
                            cout<< "*";
                        }    
                    else
                        {
                            cout<< " ";
                        }
                }                    


                else 
                {
                    if ((j <= i - n / 2) || (  j > (3 * n) / 2 - i)) 
                        {
                            cout<< "*";
                        }
                    else
                        {
                            cout<< " ";
                        }
                }
            }
            
            cout<< "\n";
            
        }
    }
}
